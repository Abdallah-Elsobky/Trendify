<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trendify" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_primary</item>
        <item name="colorPrimaryVariant">@color/black_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_primary</item>
        <item name="colorSecondaryVariant">@color/black_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Trendify" parent="Base.Theme.Trendify" />

    <style name="Theme.Trendify.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Trendify.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Trendify.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>